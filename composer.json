{
    "name": "djweb/payments",
    "description": "Payment and invoice integration package for Stripe and iFirma",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DjWeb Damian Jóźwiak",
            "email": "kontakt@djweb.pl"
        }
    ],
    "require": {
        "php": "^8.4",
        "stripe/stripe-php": "^17.0",
        "guzzlehttp/guzzle": "^7.0",
        "league/iso3166": "^4.0",
        "psr/log": "^3.0",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.10",
        "nunomaduro/phpinsights": "^2.11",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DjWeb\\Payments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DjWeb\\Payments\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "phpstan": "vendor/bin/phpstan analyse --level=8",
        "cs": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "insights": "vendor/bin/phpinsights",
        "quality": [
            "@phpstan",
            "@cs",
            "@test",
            "@insights"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
